  <h1><%= title %></h1>
  <div class='container'>
    <form class='form-horizontal' action='/blog/add' method='post'>
      <div class='form-group'>
        <label class='col-xs-10 col-sm-2 control-label' for='blogTitle'>Blog Title</label>
	<div class='col-xs-12 col-sm-10'>
	  <input id='blogTitle' class='form-control' name='blogTitle'>
	</div>
      </div>
      <div class='form-group'>
        <label class='col-sm-2 control-label' for='blogText'>Blog Text</label>
	<div class='col-sm-10'>
	  <textarea id='blogText' class='form-control' name='blogText' rows='5'></textarea>
	</div>
      </div>
      <div class='pull-right'>
        <button class='btn btn-default'>Submit</button>
        <a href='/blog/list' class='btn btn-default'>Cancel</a>
      </div>
    </form>
  </div>